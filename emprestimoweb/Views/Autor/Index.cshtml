@model IEnumerable<emprestimoweb.Models.Autor>

@{
    ViewBag.Title = "Autor";
}

<h2>Autor</h2>

<p>
    @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Alterar", "Edit", new { id = item.Codigo }, new { @class = "btn btn-warning" })

            @Html.ActionLink("Excluir", "Delete", new { id = item.Codigo }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
